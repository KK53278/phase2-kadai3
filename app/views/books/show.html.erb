<div class='container'>
  <div class='row'>
    <div class='col-md-3'>

      <h2>User info</h2>
        <%= render 'users/info', user: @book.user %>

      <h2 class="mt-3">New book</h2>
        <%= render 'form', book: @book %>

    </div>

      <div class='col-md-8 offset-md-1'>

        <h2>Book detail</h2>
        <table class='table'>
        <!--保留-->
    		  <tr>
              <td><%= link_to(@book.user) do %>
                <%= image_tag @book.user.get_profile_image, size:"50x50" %><br>
                <%= @book.user.name %>
                <% end %>
              </td>

              <td><%= link_to @book.title, @book %></td>
              <td><%= @book.body %></td>



              <% if @book.favorited_by?(current_user) %>
              <td>

                <%= link_to book_favorites_path(@book), method: :delete do %><p class="text-danger">
                ♥<%= @book.favorites.count %></p>
                <% end %>

              </td>

              <% else %>

              <td>
                <%= link_to book_favorites_path(@book), method: :post do %>
                ♥<%= @book.favorites.count %>
                <% end %>
              </td>

              <% end %>

              <td>
                <p>コメント数：<%= @book.book_comments.count %></p>

                <% @book.book_comments.each do |book_comment| %>

                  <p><%= image_tag book_comment.user.get_profile_image, size:"50x50" %></p>

                  <%= book_comment.user.name %>
                  <%= book_comment.comment %>
                <% end %>


                <%= form_with model: [@book, @book_comment] do |f| %>
                  <%= f.text_area :comment, rows: '5', placeholder: "" %>
                  <%= f.submit "送信" %>
                <% end %>
              </td>

            </tr>
        </table>

      </div>

    </div>
  </div>
</div>