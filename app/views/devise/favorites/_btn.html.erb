<% if book.favorited_by?(current_user) %>
  <%= link_to book_favorites_path(book), method: :delete do %><p class="text-danger">
  ♥<%= book.favorites.count %></p>
  <% end %>
<% else %>
  <%= link_to book_favorites_path(book), method: :post do %>
  ♥<%= book.favorites.count %>
  <% end %>
<% end %>

